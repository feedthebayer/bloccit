<%= content_tag :div, style: "margin-bottom: 30px",
    id: "comment-#{comment.id}" do %>
  <%= image_tag comment.user.avatar.tiny.url, class: "pull-left" %>
  <h4><%= comment.user.name %></h4>
  <small>
    <p><%= comment.body %></p>
    <p>
      <%= time_ago_in_words comment.created_at %> ago
      <% if policy(comment).destroy? %>
        | <%= link_to "Delete", [comment.post, comment], method: :delete,
          data: { confirm: "This comment will be permanently deleted." } %>
      <% end %>
    </p>
  </small>
<% end %>
