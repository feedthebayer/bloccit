<h1><%= @topic.name %></h1>

<% if policy(Topic.new).edit? %>
  <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
<% end %>

<% if policy(Post.new).create? %>
  <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
<% end %>

<div class='row'>
  <div class='col-md-8'>
    <p class='lead'><%= @topic.description %></p>

    <% @posts.each do |post| %>
      <div class='media'>
        <div class='media-body'>
          <%= image_tag(post.image.thumb.url) if post.image? %>
          <h4 class='media-heading'><%= link_to post.markdown_title, [@topic, post] %></h4>
          <small>
            <%= pluralize(post.comments.count, 'comment') %> &nbsp;
            submitted <%= time_ago_in_words(post.created_at) %> ago by
            <%= image_tag(current_user.avatar.tiny.url) if current_user.avatar? %>
            <%= post.user.name %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
</div>
