<%= simple_form_for topic do |f| %>
  <%= f.input :name, placeholder: "Enter topic name" %>
  <%= f.input :description, placeholder: "Enter topic description",
              input_html: { rows: 8 } %>
  <%= f.input :public %>
  <%= f.submit class: 'btn btn-success' %>
  <% if policy(topic).destroy? %>
    <%= link_to "Delete Topic", topic, method: :delete,
      class: "btn btn-danger",
      data: { confirm: "This topic will be permanently deleted." } %>
  <% end %>
<% end %>

